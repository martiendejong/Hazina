    <RepositoryType>git</RepositoryType>
    <PackageTags>anthropic;claude;llm;ai;chat;streaming;sonnet;opus;haiku;claude-3</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\LLMs\Hazina.LLMs.Client\Hazina.LLMs.Client.csproj" />
  </ItemGroup>
</Project>