    <LanguageVersion>latest</LanguageVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>Hazina.LLMs</RootNamespace>
    <Version>2.0.0</Version>
