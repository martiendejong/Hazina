<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <RootNamespace>Hazina.ChatShared</RootNamespace>
    <Version>2.0.0</Version>
    <PackageVersion>2.0.0</PackageVersion>
    <Authors>Prospergenics</Authors>
    <Description>Shared WPF chat UI components for Hazina applications. Provides reusable ChatWindow XAML component, IChatController interface, and chat message display models. Enables consistent chat experience across multiple Hazina Windows applications.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/prospergenics/devgpt</PackageProjectUrl>
    <RepositoryUrl>https://github.com/prospergenics/devgpt</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>wpf;chat-ui;windows;xaml;ui-components;chat-interface</PackageTags>
  </PropertyGroup>
</Project>

